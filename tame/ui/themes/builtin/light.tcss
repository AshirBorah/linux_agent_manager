/* TAME Light Theme */

Screen {
    background: #ffffff;
    color: #333333;
}

#header-bar {
    dock: top;
    height: 1;
    background: #007acc;
    color: #ffffff;
    padding: 0 1;
}

#sidebar {
    width: 28;
    background: #f3f3f3;
    border-right: solid #e0e0e0;
}

#sidebar-search {
    margin: 0 1;
    height: 1;
}

#session-list {
    background: #f3f3f3;
}

.session-item {
    padding: 0 1;
    height: 1;
}

.session-item:hover {
    background: #e8e8e8;
}

.session-item.--highlight {
    background: #d6ebff;
}

.session-item.status-active {
    color: #16825d;
}

.session-item.status-idle {
    color: #858585;
}

.session-item.status-waiting {
    color: #e45649;
}

.session-item.status-error {
    color: #d32f2f;
}

.session-item.status-done {
    color: #16825d;
}

.session-item.status-paused {
    color: #858585;
}

#new-session-btn {
    margin: 0 1;
    height: 1;
    background: #e0e0e0;
    color: #333333;
}

#main-panel {
    background: #ffffff;
}

#session-header {
    height: 2;
    background: #f3f3f3;
    padding: 0 1;
    color: #858585;
    border-bottom: solid #e0e0e0;
}

#session-viewer {
    background: #ffffff;
    color: #333333;
}

#input-area {
    dock: bottom;
    height: 3;
    background: #f3f3f3;
    border-top: solid #e0e0e0;
    padding: 0 1;
}

#status-bar {
    dock: bottom;
    height: 1;
    background: #007acc;
    color: #ffffff;
    padding: 0 1;
}

#toast-overlay {
    layer: overlay;
}
