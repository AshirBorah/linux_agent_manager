/* TAME Dark Theme (Default) */

Screen {
    background: #1e1e1e;
    color: #d4d4d4;
}

#header-bar {
    dock: top;
    height: 1;
    background: #007acc;
    color: #ffffff;
    padding: 0 1;
}

#sidebar {
    width: 28;
    background: #252526;
    border-right: solid #3c3c3c;
}

#sidebar-search {
    margin: 0 1;
    height: 1;
}

#session-list {
    background: #252526;
}

.session-item {
    padding: 0 1;
    height: 1;
}

.session-item:hover {
    background: #2a2d2e;
}

.session-item.--highlight {
    background: #37373d;
}

.session-item.status-active {
    color: #4ec9b0;
}

.session-item.status-idle {
    color: #858585;
}

.session-item.status-waiting {
    color: #f48771;
}

.session-item.status-error {
    color: #f44747;
}

.session-item.status-done {
    color: #4ec9b0;
}

.session-item.status-paused {
    color: #858585;
}

#new-session-btn {
    margin: 0 1;
    height: 1;
    background: #3c3c3c;
    color: #d4d4d4;
}

#main-panel {
    background: #1e1e1e;
}

#session-header {
    height: 2;
    background: #252526;
    padding: 0 1;
    color: #858585;
    border-bottom: solid #3c3c3c;
}

#session-viewer {
    background: #1e1e1e;
    color: #d4d4d4;
}

#input-area {
    dock: bottom;
    height: 3;
    background: #252526;
    border-top: solid #3c3c3c;
    padding: 0 1;
}

#status-bar {
    dock: bottom;
    height: 1;
    background: #007acc;
    color: #ffffff;
    padding: 0 1;
}

#toast-overlay {
    layer: overlay;
}
